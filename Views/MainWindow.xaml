<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Container geral -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Left" VerticalAlignment="Top">

            <!-- Formulário de criar usuário -->
            <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                <TextBlock Text="Criar Usuário" FontWeight="Bold" Margin="0 0 0 5"/>
                <TextBox x:Name="UserNameTextBox" Width="200" Margin="0 5"/>
                <Button Content="Criar Usuário" Width="150" Margin="0 5" Click="NewUserClick"/>
            </StackPanel>

            <!-- Formulário de criar tarefa -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Criar Tarefa" FontWeight="Bold" Margin="0 0 0 5"/>
                <TextBox x:Name="TitleTextBox" Width="300" Margin="0 5"/>
                <TextBox x:Name="DescriptionTextBox" Width="300" Margin="0 5"/>
                <DatePicker x:Name="DueDatePicker" Width="300" Margin="0 5"/>
                <Button Content="Criar Tarefa" Width="150" Margin="0 5" Click="NewTaskClick"/>
            </StackPanel>

        </StackPanel>



		<!-- Lista de tarefas -->
		<ListBox x:Name="TaskListView" Grid.Row="1" DisplayMemberPath="Title"/>
	</Grid>
</Window>
