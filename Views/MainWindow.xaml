<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ListView Name="TaskListView" Margin="10">
        <ListView.View>
            <GridView>
				<GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="50"/>
                <GridViewColumn Header="Título" DisplayMemberBinding="{Binding Title}" Width="150"/>
                <GridViewColumn Header="Usuário" DisplayMemberBinding="{Binding User.Name}" Width="100"/>
                <GridViewColumn Header="Descrição" DisplayMemberBinding="{Binding Description}" Width="200"/>
                <GridViewColumn Header="Data de Criação" DisplayMemberBinding="{Binding CreationDate}" Width="150"/>
				<GridViewColumn Header="Data de Conclusão" DisplayMemberBinding="{Binding CompletionDate}" Width="150"/>
                <GridViewColumn Header="Concluída" DisplayMemberBinding="{Binding IsComplete}" Width="80"/>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
